<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="register"
            type="com.oneandonly.inventationblock.datasource.model.data.RegisterModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{register.comment}"
            android:textColor="@color/text_color_gray"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="4dp"/>

        <EditText
            android:id="@+id/et_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{register.content}"
            android:hint="@{register.hint}"
            android:inputType="@{register.inputType}"
            android:background="@drawable/bg_edit_gray" />
    </LinearLayout>


</layout>